{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true, //required for zen observables
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "noEmitOnError": true,
        "strict": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
    }
}